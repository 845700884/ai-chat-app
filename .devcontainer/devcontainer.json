{
    "name": "Crypto Prediction App Builder",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
    
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "8"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    
    "postCreateCommand": "pip install --upgrade pip && pip install buildozer cython",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylint"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },
    
    "forwardPorts": [],
    
    "remoteUser": "vscode"
}
